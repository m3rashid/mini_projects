<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>URL Shortener</title>
</head>

<body>
    <div class="container mt-5">
        <h1>URL Shortener</h1>
        <form action="/shorten" method="post" class="form-control p-3 pl-5 mt-4">
            <input required type="text" placeholder="Paste URL here"
                class="p-1 pl-3 rounded border-1 form-control-lg form-control mb-2" name="url">
            <button type="submit" class="btn btn-lg btn-success">Shorten</button>
        </form>

        <table class="table table-striped mt-5 table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shorturl.forEach(url=> { %>
                    <tr>
                        <td><a href="<%= url.full %>"><%= url.full %></a></td>
                        <td><a href="<%= url.short %>"><%= url.short %></a></td>
                        <td><%= url.clicks %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <div id="copy" class="mt-5">&copy;</div>
        <script>
            document.getElementById("copy").innerText += `${new Date().getFullYear()} MD Rashid Hussain`
        </script>
    </div>
</body>

</html>